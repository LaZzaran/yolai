@model List<BTK.DAL.Entities.Lesson>
<head>
    @await Component.InvokeAsync("_HeadComponentPartial")
</head>

<div class="container-xxl py-5">
    <div class="container px-lg-5">
        <div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="position-relative d-inline text-primary ps-4">Öğrenme Süreçlerini Dönüştüren Teknolojiler</h6>
            <h2 class="mt-2"> Dersler </h2>
        </div>
        <div class="row g-4 portfolio-container">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item @item.SubjectFilterLink wow zoomIn" data-wow-delay="0.1s">
                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                        <div class="service-icon flex-shrink-0">
                            <img class="img-fluid" src="@item.Icon" alt="">
                        </div>
                        <h5 class="mb-3">@item.LessonName</h5>
                        <p>@item.LessonDescription</p>
                        <a class="btn px-3 mt-3 mx-auto" href="@Url.Action("Index", "Subject", new { filter = item.SubjectFilterLink })">Konular</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
