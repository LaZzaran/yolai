@model List<BTK.DAL.Entities.Mentor>

@await Component.InvokeAsync("_HeadComponentPartial")

<div class="container-xxl py-5">
    <div class="container px-lg-5">
        <div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="position-relative d-inline text-primary ps-4">Geleceği Aydınlatan Akıl Hocalar</h6>
            <h2 class="mt-2"> Mentorlerimiz </h2>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                    <div class="d-flex">
                            <div class="flex-shrink-0 d-flex flex-column align-items-center mt-4 pt-5" style="width: 75px;">
                                <a class="btn btn-square text-primary bg-white my-1" href="">
                                    <img src="https://w7.pngwing.com/pngs/750/644/png-transparent-google-mail-google-mail-email-gmail-flat-icon-thumbnail.png" alt="Mail" style="width: 24px; height: 24px;">
                                </a>
                                <a class="btn btn-square text-primary bg-white my-1" href="/Mentor/Mesajlaşma">
                                    <img src="https://cdn-icons-png.flaticon.com/512/9383/9383583.png" alt="Mesaj" style="width: 24px; height: 24px;">
                                </a>
                                <a class="btn btn-square text-primary bg-white my-1" href="/Mentor/Randevu">
                                    <img src="https://cdn-icons-png.flaticon.com/512/1572/1572663.png" alt="Randevu" style="width: 24px; height: 24px;">
                                </a>
                            </div>

                        <img class="img-fluid rounded w-100" src="@item.Image" alt="">
                    </div>
                    <div class="px-4 py-3">
                        <h5 class="fw-bold m-0">@item.MentorName</h5>
                        <small>@item.MentorArea</small>
                    </div>
                </div>
            </div>
            }
            
        </div>
    </div>
</div> 