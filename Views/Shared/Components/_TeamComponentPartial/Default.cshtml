
@model List<BTK.DAL.Entities.Team>
@await Component.InvokeAsync("_HeadComponentPartial")

<div class="container-xxl bg-primary testimonial py-5 my-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5 px-lg-5">

    </div>
            <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model)
            {
                <div class="testimonial-item bg-transparent border rounded text-white p-4">
                    <i class="fa fa-quote-left fa-2x mb-3"></i>
                <p>@item.Description</p>
                <div class="d-flex align-items-center">
                    <img class="img-fluid flex-shrink-0 rounded-circle" src="@item.Image" style="width: 50px; height: 50px;">
                    <div class="ps-3">
                        <h6 class="text-white mb-1">@item.Name</h6>
                        <small>Profession</small>
                    </div>
                </div>
            </div>
            }
       
        </div>
</div>
