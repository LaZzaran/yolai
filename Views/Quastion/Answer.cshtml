@{
    ViewBag.Title = "Cevap";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            color: #fff;
            background: linear-gradient(135deg, #0d47a1, #fff);
            background-attachment: fixed;
            overflow: auto;
        }

        h1 {
            font-size: 2.5em;
            text-align: center;
            margin: 20px 0;
        }

        #answerContainer {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
            width: 100%;
            max-width: 1000px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            margin-bottom: 20px;
        }

        #answer {
            font-size: 1.1em;
            color: #ddd;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <div id="answerContainer">
        <h1>Sorunuzun Cevabı</h1>
        <div id="answer">Cevap yükleniyor...</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const markdown = localStorage.getItem('answer');
            if (markdown) {
                document.getElementById('answer').innerHTML = marked.parse(markdown);
            } else {
                document.getElementById('answer').innerText = 'Cevap bulunamadı.';
            }
        });
    </script>
</body>
</html>
