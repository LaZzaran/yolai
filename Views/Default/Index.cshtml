@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
 <head>
@await Component.InvokeAsync("_HeadComponentPartial")
</head>
  <body> 
      <div class="container-fluid">
     <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" style="width: 10rem; height: 3rem;" role="status">
            </div> 
        </div>
        <!-- Spinner End --> 
        <!-- Navbar & Hero Start -->
       @await Component.InvokeAsync("_NavbarComponentPartial")
       @await Component.InvokeAsync("_FeatureComponentPartial")
        <!-- Navbar & Hero End --> 
         
        <!-- Full Screen Search Start -->
           <!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content" style="background: rgba(29, 29, 39, 0.7);">
            <div class="modal-header border-0">
                <button type="button" class="btn bg-white btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center justify-content-center">
                <div class="input-group" style="max-width: 600px;">
                    <form id="searchForm" action="/Heygen/Search" method="GET" class="d-flex w-100">
                        <input type="text" 
                               name="q" 
                               class="form-control bg-transparent border-light p-3" 
                               placeholder="Type search keyword">
                        <button type="submit" class="btn btn-light px-4">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
        <!-- Full Screen Search End -->

        <!-- About Start -->

        <div class="container-xxl py-5">
            <div class="container px-lg-5">
                <div class="row g-5">
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="section-title position-relative mb-4 pb-2">
                                <h6 class="position-relative text-primary ps-4">Kişiselleştirilmiş Kariyer Planlaması</h6>
                                <h2 class="mt-2">Kendi Potansiyelinizi Keşfedin ve Geleceğinizi Şekillendirin</h2>
                        </div>
                        <p class="mb-4">Farklı meslekleri keşfederek, kendi yeteneklerinizi ve tutkularınızı bulun. Bu sayfa, kariyer yolculuğunuzda size rehberlik edecek. Kendi hikayenizi yazın ve geleceğinizi inşa edin</p>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                    <h6 class="mb-3">
                                        <i class="fa fa-check text-primary me-2"></i>Beceri Analizi
                                    </h6>
                                    <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Bilimsel Yönlendirme</h6>
                            </div>
                            <div class="col-sm-6">
                                    <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>Potansiyel Keşfi</h6>
                                    <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>Doğru Kariyer Eşleşmesi</h6>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mt-4">
                            <a class="btn btn-primary rounded-pill px-4 me-3" href="/Anket/Index">Başlayın</a>
                            <a class="btn btn-outline-primary btn-square me-3" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-primary btn-square me-3" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-primary btn-square me-3" href=""><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-outline-primary btn-square" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                                <img class="img-fluid wow zoomIn" data-wow-delay="0.5s" src="~/Btk/seomaster-1.0.0/img/about.jpg">
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->

        <!-- Newsletter Start -->
        <div class="container-xxl bg-primary newsletter my-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container px-lg-5">
                <div class="row align-items-center" style="height: 250px;">
                    <div class="col-12 col-md-6">
                        <h3 class="text-white">Soru Sormaktan ASLA çekinme</h3>
                        <small class="text-white">Senin için en doğru adres burası.</small>
                        <div class="position-relative w-100 mt-3">
                            <input class="form-control border-0 rounded-pill w-100 ps-4 pe-5" type="text" placeholder="Sorunu Gir" style="height: 48px;">
                                <button type="button"
                                        class="btn shadow-none position-absolute top-0 end-0 mt-1 me-2"
                                        onclick="window.location.href='/Heygen/Cevap';">
                                    <i class="fa fa-paper-plane text-primary fs-4"></i>
                                </button>

                        </div>
                    </div>
                    <div class="col-md-6 text-center mb-n5 d-none d-md-block">
                        <img class="img-fluid mt-5" style="height: 250px;" src="~/Btk/seomaster-1.0.0/img/newsletter.png">
                    </div>
                </div>
            </div>
        </div>
        <!-- Newsletter End -->


        <!-- Service Start -->
                @await Component.InvokeAsync("_LessonComponentPartial")
        <!-- Service End -->


        <!-- Portfolio Start -->
      @*           @await Component.InvokeAsync("_SubjectComponentPartial") *@
        
        <!-- Portfolio End -->


        <!-- Mentors Start -->
                @await Component.InvokeAsync("_MentorComponentPartial")
       
                <!-- Testimonial Start -->
                @await Component.InvokeAsync("_TeamComponentPartial")
             
                <!-- Testimonial End -->

        <!-- Footer Start -->
                @await Component.InvokeAsync("_FooterComponentPartial")
      
        <!-- Footer End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top pt-2"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    @await Component.InvokeAsync("_ScriptComponentPartial")
    
    </div>

</body>
</html>